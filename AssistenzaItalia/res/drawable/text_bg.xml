<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom Shadow -->
<item>
    <shape  android:shape="rectangle">

        <solid android:color="#d8d8d8" />
        <corners
            android:radius="20dp" />

    </shape>
</item>
    
<!-- Top color -->
<item android:top="2px" android:left="2px" android:right="2px" android:bottom="2px">

    <shape  android:shape="rectangle">

    <solid android:color="#FFFFFF" />
    <corners
            android:radius="20dp" />


    </shape>

</item>


</layer-list>